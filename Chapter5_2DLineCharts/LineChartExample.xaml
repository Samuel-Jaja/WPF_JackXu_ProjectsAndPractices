<Window x:Class="Chapter5_2DLineCharts.LineChartExample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chapter5_2DLineCharts"
        mc:Ignorable="d"
        Title="LineChartExample" Height="450" Width="800">
    <Grid x:Name ="chartGrid" ClipToBounds="False" Background="Transparent" 
 SizeChanged="chartGrid_SizeChanged" >
        <Border HorizontalAlignment="Center" VerticalAlignment="Center" 
 BorderBrush="Gray" BorderThickness="1" Background="White" 
 Margin="10" >
            <Canvas Margin="0" x:Name ="chartCanvas" ClipToBounds="True" 
 Background="Transparent"/>
        </Border>
    </Grid>
</Window>
